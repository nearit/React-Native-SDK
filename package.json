{
  "name": "react-native-nearit",
  "version": "2.4.2-beta.1",
  "author": "Mattia Panzeri <mattia.panzeri93@gmail.com>",
  "license": "MPL-2.0",
  "description": "The official NearIT SDK plugin for React Native",
  "keywords": [
    "react-native",
    "nearit",
    "proximity"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearit/React-Native-SDK"
  },
  "bugs": {
    "url": "https://github.com/nearit/React-Native-SDK/issues"
  },
  "homepage": "https://github.com/nearit/React-Native-SDK#readme",
  "main": "index.js",
  "nativePackage": true,
  "peerDependencies": {
    "react-native": ">=0.45"
  },
  "dependencies": {
    "glob": "^7.1.2"
  },
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "flow-bin": "^0.54.1",
    "flow-copy-source": "^1.2.1",
    "flow-remove-types": "^1.2.1",
    "npm-run-all": "^4.1.1",
    "rimraf": "^2.6.2",
    "snazzy": "^7.0.0",
    "standard": "*"
  },
  "scripts": {
    "flow": "flow",
    "cleanup": "rimraf lib/",
    "lint:js": "standard './index.js' './src/**.js' | snazzy",
    "lint:flow": "flow check",
    "lint": "run-s lint:*",
    "build:js": "flow-remove-types src/ -d lib/",
    "build:flow": "flow-copy-source src lib",
    "build": "run-s build:*",
    "prepack": "run-s cleanup lint build"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "rnpm": {
    "commands": {
      "postlink": "node node_modules/react-native-nearit/scripts/postlink/run.js"
    }
  }
}
